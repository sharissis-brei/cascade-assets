                            </div>
                        </div>

                        <div class="leftNav">
                            <%= render 'widgets/shared/left_nav' %>

                            <div class="leftNavSubContent">
                                <%= yield(:left_column) %>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <%= yield(:footer) %>

        </div>
        <!--! end of #container -->

        <div class="hidden">
            <div class="featureFeed">/_featured/Default.xml</div>
            <div class="newsFeed">Schmid</div>
            <div class="eventsFeed">Default</div>
            <div class="newsEventsOptions">$newsEventsOptions</div>
            <div class="leftColumnNewsEventsOptions">$leftColumnnewsEventsOptions</div>
